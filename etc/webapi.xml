<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/coinpayments/currency/set" method="POST">
        <service class="Coinpayments\CoinPayments\Api\CurrencyInterface" method="setCurrency"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/coinpayments/invoice/create" method="POST">
        <service class="Coinpayments\CoinPayments\Api\InvoiceInterface" method="createInvoice"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/coinpayments/invoice/notification" method="POST">
        <service class="Coinpayments\CoinPayments\Api\InvoiceInterface" method="updateInvoice"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>